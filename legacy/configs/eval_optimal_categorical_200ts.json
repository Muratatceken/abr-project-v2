{
  "project": {
    "name": "ABR_CVAE_Optimal_Categorical_200ts_Eval",
    "description": "Evaluation configuration for trained CVAE model",
    "version": "1.0.0"
  },
  "data": {
    "raw_data_path": "data/abr_dataset.xlsx",
    "processed_data_path": "data/processed/processed_data_categorical_200ts.pkl",
    "preprocessing": {
      "save_transformers": true,
      "scaler_path": "data/processed/scaler.pkl",
      "encoder_path": "data/processed/label_encoder.pkl",
      "verbose": true
    },
    "dataloader": {
      "batch_size": 64,
      "val_split": 0.15,
      "test_split": 0.1,
      "num_workers": 6,
      "shuffle": true,
      "pin_memory": true,
      "drop_last": false
    }
  },
  "model": {
    "architecture": {
      "latent_dim": 64,
      "predict_peaks": true,
      "num_peaks": 6,
      "static_params_dim": 6,
      "encoder": {
        "hidden_dims": [1024, 512, 256, 128],
        "dropout": 0.15,
        "activation": "leaky_relu",
        "batch_norm": true
      },
      "decoder": {
        "hidden_dims": [128, 256, 512, 1024, 2048],
        "dropout": 0.15,
        "activation": "leaky_relu",
        "batch_norm": true
      }
    },
    "initialization": {
      "type": "xavier_uniform",
      "gain": 0.02
    }
  },
  "evaluation": {
    "checkpoint_path": "checkpoints_optimal_categorical/best_model.pth",
    "metrics": {
      "reconstruction": {
        "mse": true,
        "mae": true,
        "rmse": true,
        "correlation": true,
        "r_squared": true,
        "ssim": true
      },
      "peaks": {
        "peak_mae": true,
        "peak_correlation": true,
        "peak_presence_accuracy": true,
        "per_peak_metrics": true,
        "peak_timing_accuracy": true
      },
      "advanced": {
        "dtw_distance": true,
        "latent_space_quality": true,
        "generation_diversity": true,
        "interpolation_quality": true
      }
    },
    "visualization": {
      "reconstruction": {
        "enabled": true,
        "num_samples": 8,
        "save_individual": true,
        "save_grid": true,
        "show_peaks": true
      },
      "latent_space": {
        "enabled": true,
        "method": "pca",
        "color_by": ["intensity", "age", "hear_loss"],
        "num_samples": 2000,
        "perplexity": 50,
        "random_state": 42
      },
      "generation": {
        "enabled": true,
        "num_conditions": 10,
        "samples_per_condition": 15,
        "num_parameter_sets": 10,
        "samples_per_set": 15,
        "show_variability": true,
        "interpolation_steps": 20
      }
    }
  },
  "checkpoints": {
    "save_dir": "checkpoints_optimal_categorical",
    "save_frequency": 15,
    "save_best_only": false,
    "monitor": "val_total_loss",
    "mode": "min",
    "filename_template": "epoch_{epoch:03d}_loss_{val_loss:.6f}.pth"
  },
  "outputs": {
    "base_dir": "outputs_optimal_categorical",
    "plots_dir": "outputs_optimal_categorical/plots",
    "results_dir": "outputs_optimal_categorical/results",
    "models_dir": "outputs_optimal_categorical/models",
    "logs_dir": "logs"
  },
  "output": {
    "save_plots": true,
    "save_results": true,
    "save_summary": true,
    "timestamp": true
  },
  "logging": {
    "level": "INFO",
    "log_file": "logs/evaluation_optimal_categorical.log",
    "save_log": true,
    "tensorboard": {
      "enabled": false,
      "log_dir": "runs_optimal_categorical",
      "comment": "CVAE_ABR_Optimal_Categorical_Evaluation"
    }
  },
  "device": {
    "type": "auto",
    "cuda_deterministic": false,
    "cuda_benchmark": true
  },
  "reproducibility": {
    "seed": 42,
    "deterministic": false
  }
} 
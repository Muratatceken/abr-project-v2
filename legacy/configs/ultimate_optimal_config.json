{
  "project": {
    "name": "ABR_CVAE_Ultimate_Optimal",
    "description": "Ultimate optimized CVAE configuration combining all advanced features for best results",
    "version": "2.0.0"
  },
  "data": {
    "raw_data_path": "data/abr_dataset.xlsx",
    "processed_data_path": "data/processed/processed_data_categorical_200ts.pkl",
    "preprocessing": {
      "save_transformers": true,
      "scaler_path": "data/processed/scaler.pkl",
      "encoder_path": "data/processed/label_encoder.pkl",
      "verbose": true
    },
    "dataloader": {
      "batch_size": 128,
      "val_split": 0.15,
      "test_split": 0.1,
      "num_workers": 8,
      "shuffle": true,
      "pin_memory": true,
      "drop_last": true
    }
  },
  "model": {
    "architecture": {
      "latent_dim": 128,
      "predict_peaks": true,
      "num_peaks": 6,
      "static_params_dim": 6,
      "use_film": true,
      "joint_generation": false,
      "encoder": {
        "hidden_dims": [2048, 1024, 512, 256, 128],
        "dropout": 0.1,
        "activation": "leaky_relu",
        "batch_norm": true,
        "residual_connections": true
      },
      "decoder": {
        "hidden_dims": [128, 256, 512, 1024, 2048, 4096],
        "dropout": 0.1,
        "activation": "leaky_relu",
        "batch_norm": true,
        "residual_connections": true
      }
    },
    "initialization": {
      "type": "xavier_uniform",
      "gain": 0.01
    }
  },
  "training": {
    "optimizer": {
      "type": "adamw",
      "learning_rate": 3e-4,
      "weight_decay": 1e-4,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "amsgrad": true
    },
    "scheduler": {
      "type": "cosine_annealing_warm_restarts",
      "T_0": 25,
      "T_mult": 2,
      "eta_min": 1e-7,
      "warmup_epochs": 15,
      "verbose": true
    },
    "loss": {
      "beta_scheduler": {
        "type": "cosine",
        "max_beta": 1.0,
        "warmup_epochs": 30,
        "decay_rate": 0.02
      },
      "peak_loss_weight": 1.2,
      "use_peak_loss": true,
      "gradient_clip": 0.5,
      "reconstruction_loss": "mse",
      "kl_loss_weight": 1.0
    },
    "epochs": 200,
    "early_stopping": {
      "patience": 35,
      "min_delta": 1e-6,
      "restore_best_weights": true
    },
    "validation": {
      "frequency": 1,
      "compute_metrics": true
    },
    "use_enhanced_loss": true,
    "loss_weights": {
      "reconstruction": 1.0,
      "kl_divergence": 1.0,
      "peak_loss": 1.2,
      "static_reconstruction": 0.8,
      "infonce_contrastive": 0.15,
      "alignment_loss": 0.05
    },
    "loss_config": {
      "peak_loss_type": "huber",
      "huber_delta": 1.0,
      "alignment_loss_type": "warped_mse",
      "max_warp": 15,
      "use_infonce": true,
      "infonce_temperature": 0.05,
      "use_alignment_loss": true
    }
  },
  "static_regularization": {
    "use_static_regularization": true,
    "static_regularization_weight": 0.8,
    "use_infonce_loss": true,
    "infonce_weight": 0.15,
    "infonce_temperature": 0.05
  },
  "enhanced_loss": {
    "use_enhanced_loss": true,
    "loss_weights": {
      "reconstruction": 1.0,
      "kl_divergence": 1.0,
      "peak_loss": 1.2,
      "alignment_loss": 0.05,
      "static_reconstruction": 0.8,
      "infonce_contrastive": 0.15
    },
    "loss_config": {
      "peak_loss_type": "huber",
      "alignment_loss_type": "warped_mse",
      "use_infonce": true,
      "infonce_temperature": 0.05
    }
  },
  "beta_scheduler": {
    "beta_scheduler_type": "cosine",
    "beta_scheduler_params": {
      "max_beta": 1.0,
      "warmup_epochs": 30,
      "num_cycles": 3,
      "min_beta": 0.0
    }
  },
  "evaluation": {
    "checkpoint_path": "checkpoints_ultimate_optimal/best_model.pth",
    "metrics": {
      "reconstruction": {
        "mse": true,
        "mae": true,
        "rmse": true,
        "correlation": true,
        "r_squared": true,
        "ssim": true
      },
      "peaks": {
        "peak_mae": true,
        "peak_correlation": true,
        "peak_presence_accuracy": true,
        "per_peak_metrics": true,
        "peak_timing_accuracy": true
      },
      "advanced": {
        "dtw_distance": true,
        "latent_space_quality": true,
        "generation_diversity": true,
        "interpolation_quality": true,
        "static_reconstruction_quality": true
      }
    },
    "visualization": {
      "signal_reconstruction": {
        "enabled": true,
        "num_samples": 16,
        "save_individual": true,
        "save_grid": true,
        "show_peaks": true
      },
      "latent_space": {
        "enabled": true,
        "method": "both",
        "color_by": ["intensity", "age", "hear_loss", "fmp", "res_no"],
        "num_samples": 3000,
        "perplexity": 75,
        "random_state": 42
      },
      "sample_generation": {
        "enabled": true,
        "num_parameter_sets": 15,
        "samples_per_set": 20,
        "show_variability": true,
        "interpolation_steps": 30
      }
    }
  },
  "inference": {
    "checkpoint_path": "checkpoints_ultimate_optimal/best_model.pth",
    "output_dir": "outputs_ultimate_optimal",
    "generation": {
      "num_samples": 500,
      "batch_size": 32,
      "save_signals": true,
      "save_peaks": true,
      "save_format": "both"
    },
    "static_params": {
      "age_range": [18, 90],
      "intensity_range": [50, 100],
      "stimulus_rate_range": [11, 101],
      "fmp_range": [0.05, 3.0],
      "res_no_range": [5, 300],
      "hear_loss_categories": [1, 2, 3, 4, 5],
      "hear_loss_labels": ["Normal", "Nöropati̇", "Sni̇k", "Total", "İti̇k"]
    }
  },
  "logging": {
    "level": "INFO",
    "log_file": "logs/training_ultimate_optimal.log",
    "tensorboard": {
      "enabled": true,
      "log_dir": "runs_ultimate_optimal",
      "comment": "Ultimate_Optimal_CVAE_Training"
    },
    "wandb": {
      "enabled": false,
      "project": "abr-cvae-ultimate-optimal",
      "entity": null,
      "tags": ["cvae", "abr", "ultimate-optimal", "enhanced-features"]
    }
  },
  "checkpoints": {
    "save_dir": "checkpoints_ultimate_optimal",
    "save_frequency": 10,
    "save_best_only": false,
    "monitor": "val_total_loss",
    "mode": "min",
    "filename_template": "epoch_{epoch:03d}_loss_{val_loss:.6f}.pth"
  },
  "outputs": {
    "base_dir": "outputs_ultimate_optimal",
    "plots_dir": "outputs_ultimate_optimal/plots",
    "results_dir": "outputs_ultimate_optimal/results",
    "models_dir": "outputs_ultimate_optimal/models",
    "logs_dir": "logs"
  },
  "monitoring": {
    "log_interval": 50,
    "save_frequency": 10,
    "plot_frequency": 5,
    "metric_frequency": 1
  },
  "device": {
    "type": "auto",
    "cuda_deterministic": false,
    "cuda_benchmark": true
  },
  "reproducibility": {
    "seed": 42,
    "deterministic": false
  }
} 
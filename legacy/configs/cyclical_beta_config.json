{
    "model": {
        "signal_length": 200,
        "static_dim": 7,
        "latent_dim": 64,
        "predict_peaks": true,
        "num_peaks": 6,
        "use_film": false,
        "model_type": "standard"
    },
    "training": {
        "batch_size": 32,
        "learning_rate": 0.0001,
        "num_epochs": 100,
        "peak_loss_weight": 1.0,
        "static_loss_weight": 1.0,
        "use_peak_loss": true,
        "early_stopping_patience": 20,
        "gradient_clip": 1.0,
        "log_interval": 50,
        "save_interval": 10,
        
        "scheduler": {
            "type": "cosine",
            "T_max": 100,
            "eta_min": 0.00001
        },
        
        "beta_scheduler_type": "cyclical",
        "beta_scheduler_params": {
            "cycle_length": 20,
            "min_beta": 0.0,
            "max_beta": 1.0,
            "wave_type": "cosine"
        },
        
        "use_enhanced_loss": true,
        "loss_weights": {
            "reconstruction": 1.0,
            "kl": 1.0,
            "peak": 1.0,
            "alignment": 0.1
        },
        "loss_config": {
            "peak_loss_type": "mae",
            "use_alignment_loss": false
        }
    },
    "data": {
        "data_file": "data/processed/processed_data_categorical_200ts.pkl",
        "validation_split": 0.2,
        "seed": 42
    },
    "output": {
        "checkpoint_dir": "checkpoints",
        "save_every_n_epochs": 10,
        "save_best_model": true,
        "log_file": "logs/training.log"
    },
    "cyclical_schedule": {
        "description": "Cyclical beta scheduler configuration",
        "advantages": [
            "Periodic exploration of different KL regularization strengths",
            "Prevents model from getting stuck in local minima",
            "Better balance between reconstruction and regularization"
        ],
        "cycle_interpretation": {
            "high_beta_phase": "Strong regularization, forces latent compression",
            "low_beta_phase": "Focus on reconstruction quality",
            "transition": "Gradual balance adjustment"
        }
    }
} 
{
  "model": {
    "checkpoint_path": "checkpoints/best_model.pth",
    "device": "auto"
  },
  "data": {
    "data_path": "data/processed/processed_data_clean.pkl",
    "batch_size": 16,
    "num_workers": 2,
    "split": "validation"
  },
  "sampling": {
    "strategies": ["reconstruction"],
    "num_samples": 500
  },
  "evaluation": {
    "output_dir": "outputs/evaluation_simple",
    "timestamp_outputs": true,
    "compute_reconstruction_metrics": true,
    "compute_peak_metrics": true,
    "compute_advanced_metrics": false,
    "num_visualization_samples": 5,
    "num_generation_samples": 3,
    "save_results": true,
    "batch_evaluation": true
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(levelname)s - %(message)s",
    "save_log": true
  },
  "metrics": {
    "reconstruction": {
      "mse": true,
      "mae": true,
      "rmse": true,
      "correlation": true,
      "r_squared": true
    },
    "peaks": {
      "peak_mae": true,
      "peak_correlation": true,
      "peak_presence_accuracy": true,
      "per_peak_metrics": true
    },
    "advanced": {
      "dtw_distance": false,
      "ssim": false,
      "snr": false
    },
    "latent_space": {
      "mean_variance": true,
      "dimensionality_reduction": false
    }
  },
  "visualization": {
    "signal_reconstruction": {
      "enabled": true,
      "num_samples": 3,
      "save_individual": false
    },
    "peak_analysis": {
      "enabled": true,
      "num_samples": 3
    },
    "latent_space": {
      "enabled": false
    }
  },
  "outputs": {
    "base_dir": "outputs/evaluation_simple",
    "plots_dir": "outputs/evaluation_simple/plots",
    "latent_space_dir": "outputs/evaluation_simple/latent_space",
    "generated_samples_dir": "outputs/evaluation_simple/generated_samples"
  }
} 
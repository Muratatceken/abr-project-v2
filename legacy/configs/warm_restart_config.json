{
    "model": {
        "signal_length": 200,
        "static_dim": 7,
        "latent_dim": 64,
        "predict_peaks": true,
        "num_peaks": 6,
        "use_film": false,
        "model_type": "standard"
    },
    "training": {
        "batch_size": 32,
        "learning_rate": 0.0001,
        "num_epochs": 150,
        "peak_loss_weight": 1.0,
        "static_loss_weight": 1.0,
        "use_peak_loss": true,
        "early_stopping_patience": 25,
        "gradient_clip": 1.0,
        "log_interval": 50,
        "save_interval": 10,
        
        "scheduler": {
            "type": "cosine",
            "T_max": 150,
            "eta_min": 0.00001
        },
        
        "beta_scheduler_type": "warm_restart",
        "beta_scheduler_params": {
            "base_scheduler_type": "cosine",
            "base_scheduler_kwargs": {
                "max_beta": 1.0,
                "warmup_epochs": 20
            },
            "restart_interval": 40,
            "restart_multiplier": 1.2
        },
        
        "use_enhanced_loss": true,
        "loss_weights": {
            "reconstruction": 1.0,
            "kl": 1.0,
            "peak": 1.0,
            "alignment": 0.1
        },
        "loss_config": {
            "peak_loss_type": "mae",
            "use_alignment_loss": false
        }
    },
    "data": {
        "data_file": "data/processed/processed_data_categorical_200ts.pkl",
        "validation_split": 0.2,
        "seed": 42
    },
    "output": {
        "checkpoint_dir": "checkpoints",
        "save_every_n_epochs": 10,
        "save_best_model": true,
        "log_file": "logs/training.log"
    },
    "warm_restart_schedule": {
        "description": "Warm restart beta scheduler configuration",
        "restart_schedule": {
            "first_restart": 40,
            "second_restart": 88,
            "third_restart": 146
        },
        "advantages": [
            "Periodic reset of KL regularization",
            "Allows model to refocus on reconstruction periodically",
            "Escapes local minima through regularization cycling",
            "Adaptive restart intervals with multiplier"
        ],
        "phase_interpretation": {
            "post_restart": "Focus on reconstruction (beta=0)",
            "warmup_phase": "Gradual introduction of KL regularization",
            "plateau_phase": "Full regularization strength",
            "pre_restart": "Prepare for next reconstruction focus"
        }
    }
} 
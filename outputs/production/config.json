{
  "num_epochs": 100,
  "learning_rate": 0.0001,
  "gradient_accumulation_steps": 2,
  "batch_size": 32,
  "num_workers": 6,
  "prefetch_factor": 4,
  "persistent_workers": true,
  "data_path": "data/processed/ultimate_dataset.pkl",
  "train_split": 0.7,
  "val_split": 0.15,
  "test_split": 0.15,
  "validation": {
    "fast_mode": true,
    "ddim_steps": 10,
    "skip_generation": true,
    "full_validation_every": 10,
    "validate_every": 1
  },
  "model": {
    "base_channels": 64,
    "n_levels": 4,
    "n_classes": 5,
    "dropout": 0.1,
    "use_attention": true,
    "use_film": true
  },
  "optimizer": {
    "type": "adamw",
    "weight_decay": "1e-5",
    "betas": [
      0.9,
      0.999
    ],
    "eps": "1e-8"
  },
  "scheduler": {
    "type": "cosine_annealing_warm_restarts",
    "T_0": 25,
    "T_mult": 2,
    "eta_min": "1e-7",
    "warmup_epochs": 5
  },
  "loss_weights": {
    "signal": 1.0,
    "peak_exist": 0.5,
    "peak_latency": 1.0,
    "peak_amplitude": 1.0,
    "classification": 1.0,
    "threshold": 0.8
  },
  "use_class_weights": true,
  "label_smoothing": 0.1,
  "curriculum": {
    "enabled": true,
    "ramp_epochs": 30,
    "weights": {
      "signal": [
        0.5,
        1.0
      ],
      "classification": [
        2.0,
        1.0
      ],
      "peak_exist": [
        0.2,
        0.5
      ]
    }
  },
  "patience": 25,
  "min_delta": "1e-6",
  "save_best_only": false,
  "save_every": 10,
  "checkpoint_dir": "checkpoints/production",
  "save_formats": [
    "pytorch",
    "onnx"
  ],
  "save_criteria": {
    "best_loss": true,
    "best_f1": true,
    "best_accuracy": true,
    "latest": true,
    "milestone_epochs": [
      50,
      100,
      150
    ]
  },
  "visualization": {
    "enabled": true,
    "save_plots": true,
    "plot_dir": "plots/production",
    "plot_every": 5,
    "plot_types": [
      "training_curves",
      "validation_metrics",
      "learning_rate",
      "loss_components",
      "sample_reconstructions",
      "confusion_matrix",
      "peak_predictions"
    ]
  },
  "logging": {
    "level": "INFO",
    "log_dir": "logs/production",
    "use_tensorboard": true,
    "tensorboard_dir": "runs/production",
    "save_training_log": true,
    "log_every": 50,
    "log_metrics_every": 1
  },
  "use_amp": true,
  "use_memory_efficient_attention": true,
  "clear_cache_every": 100,
  "pin_memory": true,
  "use_balanced_sampler": false,
  "random_seed": 42,
  "deterministic": false,
  "benchmark": true,
  "clinical": {
    "apply_constraints": true,
    "peak_latency_range": [
      1.0,
      8.0
    ],
    "amplitude_range": [
      -0.5,
      0.5
    ]
  },
  "output_dir": "outputs/production",
  "experiment_name": "abr_production_100epochs_test",
  "evaluation": {
    "enabled": true,
    "eval_every": 10,
    "save_predictions": true,
    "compute_clinical_metrics": true
  },
  "plot_dir": "plots/production",
  "log_dir": "logs/production",
  "tensorboard_dir": "runs/production",
  "resume_from": null,
  "validate_only": false,
  "device": "cpu"
}
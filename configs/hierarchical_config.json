{
    "model": {
        "signal_length": 200,
        "static_dim": 7,
        "global_latent_dim": 32,
        "local_latent_dim": 32,
        "predict_peaks": true,
        "num_peaks": 6,
        "use_film": true,
        "early_signal_ratio": 0.3,
        "model_type": "hierarchical"
    },
    "training": {
        "batch_size": 32,
        "learning_rate": 0.0001,
        "num_epochs": 150,
        "global_kl_weight": 0.01,
        "local_kl_weight": 0.01,
        "static_loss_weight": 1.0,
        "peak_loss_weight": 1.0,
        "use_peak_loss": true,
        "early_stopping_patience": 15,
        "scheduler": {
            "type": "cosine",
            "T_max": 150,
            "eta_min": 0.00001
        },
        "use_enhanced_loss": true,
        "use_hierarchical_loss": true,
        "loss_weights": {
            "reconstruction": 1.0,
            "static": 1.0,
            "global_kl": 0.01,
            "local_kl": 0.01,
            "peak": 1.0,
            "alignment": 0.1
        },
        "loss_config": {
            "peak_loss_type": "mae",
            "huber_delta": 1.0,
            "alignment_type": "warped_mse",
            "max_warp": 10,
            "temperature": 1.0,
            "use_alignment_loss": false
        }
    },
    "data": {
        "data_file": "data/processed/processed_data_categorical_200ts.pkl",
        "validation_split": 0.2,
        "seed": 42
    },
    "output": {
        "checkpoint_dir": "checkpoints",
        "save_every_n_epochs": 10,
        "save_best_model": true,
        "log_file": "logs/training.log"
    },
    "hierarchical": {
        "description": "Hierarchical CVAE configuration",
        "global_encoder": {
            "description": "Captures global signal characteristics",
            "latent_dim": 32,
            "focus": "overall_patterns"
        },
        "local_encoder": {
            "description": "Captures fine-grained waveform details",
            "latent_dim": 32,
            "early_signal_ratio": 0.3,
            "focus": "local_patterns"
        },
        "decoder": {
            "description": "Uses z_global for FiLM modulation, z_local+static for detail generation",
            "film_conditioning": "z_global",
            "detail_generation": "z_local + static_params"
        }
    }
} 
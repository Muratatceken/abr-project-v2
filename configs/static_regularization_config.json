{
    "model": {
        "signal_length": 200,
        "static_dim": 8,
        "latent_dim": 64,
        "predict_peaks": true,
        "num_peaks": 6,
        "joint_generation": false,
        "use_film": true
    },
    "training": {
        "batch_size": 32,
        "num_epochs": 100,
        "learning_rate": 0.001,
        "warmup_epochs": 10,
        "max_beta": 1.0,
        "peak_loss_weight": 1.0,
        "static_loss_weight": 1.0,
        "gradient_clip": 1.0,
        "log_interval": 50
    },
    "static_regularization": {
        "use_static_regularization": true,
        "static_regularization_weight": 0.5,
        "use_infonce_loss": true,
        "infonce_weight": 0.1,
        "infonce_temperature": 0.07
    },
    "enhanced_loss": {
        "use_enhanced_loss": true,
        "loss_weights": {
            "reconstruction": 1.0,
            "kl_divergence": 1.0,
            "peak_loss": 1.0,
            "alignment_loss": 0.1,
            "static_reconstruction": 0.5,
            "infonce_contrastive": 0.1
        },
        "loss_config": {
            "peak_loss_type": "mae",
            "alignment_loss_type": "warped_mse",
            "use_infonce": true,
            "infonce_temperature": 0.07
        }
    },
    "beta_scheduler": {
        "beta_scheduler_type": "cosine",
        "beta_scheduler_params": {
            "max_beta": 1.0,
            "warmup_epochs": 10,
            "num_cycles": 2,
            "min_beta": 0.0
        }
    },
    "early_stopping": {
        "patience": 20,
        "min_delta": 0.001,
        "restore_best_weights": true
    },
    "data": {
        "data_file": "data/processed/processed_data_categorical_200ts.pkl",
        "validation_split": 0.2,
        "test_split": 0.1,
        "shuffle": true,
        "normalize_signals": true,
        "normalize_static": true
    },
    "logging": {
        "log_dir": "logs/static_regularization",
        "save_model_every": 10,
        "save_best_model": true,
        "tensorboard_log": true
    }
} 
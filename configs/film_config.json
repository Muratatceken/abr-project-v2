{
    "model": {
        "signal_length": 200,
        "static_dim": 7,
        "latent_dim": 64,
        "predict_peaks": false,
        "num_peaks": 6,
        "joint_generation": true,
        "use_film": true
    },
    "training": {
        "batch_size": 32,
        "learning_rate": 0.0001,
        "num_epochs": 150,
        "kl_weight": 0.01,
        "static_loss_weight": 1.0,
        "early_stopping_patience": 15,
        "scheduler": {
            "type": "cosine",
            "T_max": 150,
            "eta_min": 0.00001
        }
    },
    "data": {
        "data_file": "data/processed/processed_data_categorical_200ts.pkl",
        "validation_split": 0.2,
        "seed": 42
    },
    "output": {
        "checkpoint_dir": "checkpoints",
        "save_every_n_epochs": 10,
        "save_best_model": true,
        "log_file": "logs/training.log"
    },
    "film": {
        "hidden_dim": 64,
        "conditioning_strength": 1.0,
        "description": "FiLM (Feature-wise Linear Modulation) conditioning parameters"
    }
} 
{
  "project": {
    "name": "ABR_CVAE_Ultimate_Optimal_V3",
    "description": "Enhanced configuration addressing KL collapse, enabling hierarchical modeling, and dynamic loss scheduling",
    "version": "3.0.0"
  },
  "data": {
    "raw_data_path": "data/abr_dataset.xlsx",
    "processed_data_path": "data/processed/processed_data_categorical_200ts.pkl",
    "preprocessing": {
      "save_transformers": true,
      "scaler_path": "data/processed/scaler.pkl",
      "encoder_path": "data/processed/label_encoder.pkl",
      "verbose": true,
      "signal_length": 200
    },
    "dataloader": {
      "batch_size": 64,
      "val_split": 0.15,
      "test_split": 0.1,
      "num_workers": 8,
      "shuffle": true,
      "pin_memory": true,
      "drop_last": true,
      "normalize_signals": true,
      "normalize_static": true
    }
  },
  "model": {
    "architecture": {
      "signal_length": 200,
      "static_dim": 6,
      "latent_dim": 128,
      "use_hierarchical_model": false,
      "global_latent_dim": 64,
      "local_latent_dim": 64,
      "early_signal_ratio": 0.3,
      "predict_peaks": true,
      "num_peaks": 6,
      "joint_generation": false,
      "use_film": true,
      "model_type": "standard",
      "encoder": {
        "hidden_dims": [1024, 512, 256, 128],
        "dropout": 0.1,
        "activation": "leaky_relu",
        "batch_norm": true,
        "residual_connections": true
      },
      "decoder": {
        "hidden_dims": [128, 256, 512, 1024, 2048],
        "dropout": 0.1,
        "activation": "leaky_relu",
        "batch_norm": true,
        "residual_connections": true,
        "film_hidden_dim": 128
      }
    },
    "initialization": {
      "type": "xavier_uniform",
      "gain": 0.01
    }
  },
  "training": {
    "optimizer": {
      "type": "adamw",
      "learning_rate": 1e-4,
      "weight_decay": 1e-4,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "amsgrad": true
    },
    "scheduler": {
      "type": "cosine_annealing_warm_restarts",
      "T_0": 40,
      "T_mult": 1.5,
      "eta_min": 1e-7,
      "warmup_epochs": 25,
      "verbose": true
    },
    "beta_scheduler_type": "warm_restart",
    "beta_scheduler_params": {
      "base_scheduler_type": "cosine",
      "base_scheduler_kwargs": {
        "max_beta": 0.8,
        "warmup_epochs": 40
      },
      "restart_interval": 60,
      "restart_multiplier": 1.3
    },
    "epochs": 250,
    "early_stopping": {
      "patience": 60,
      "min_delta": 1e-5,
      "restore_best_weights": true
    },
    "validation": {
      "frequency": 1,
      "compute_metrics": true
    },
    "gradient_clip": 1.0,
    "log_interval": 50,
    "save_interval": 15,
    "use_enhanced_loss": true,
    "use_hierarchical_loss": true,
    "loss_weights": {
      "reconstruction": 1.0,
      "kl_divergence": 1.5,
      "peak_loss": 1.0,
      "static_reconstruction": 0.8,
      "infonce_contrastive": 0.3,
      "alignment_loss": 0.1
    },
    "loss_config": {
      "peak_loss_type": "huber",
      "huber_delta": 1.0,
      "alignment_loss_type": "warped_mse",
      "max_warp": 15,
      "temperature": 1.0,
      "use_infonce": true,
      "infonce_temperature": 0.07,
      "use_alignment_loss": true,
      "use_hierarchical_static_loss": true,
      "use_hierarchical_infonce": true,
      "static_loss_weights": {
        "global": 0.4,
        "local": 0.4,
        "combined": 0.2
      },
      "infonce_weights": {
        "global": 0.6,
        "local": 0.4
      }
    },
    "hyperparameter_sweep": {
      "peak_loss_weight": {
        "enabled": true,
        "type": "exponential",
        "start": 0.8,
        "end": 2.0
      },
      "kl_weight": {
        "enabled": true,
        "type": "exponential",
        "start": 1.0,
        "end": 3.0
      },
      "infonce_weight": {
        "enabled": true,
        "type": "linear",
        "start": 0.2,
        "end": 0.5
      }
    }
  },
  "static_regularization": {
    "use_static_regularization": true,
    "static_regularization_weight": 0.8,
    "use_infonce_loss": true,
    "infonce_weight": 0.3,
    "infonce_temperature": 0.07
  },
  "enhanced_loss": {
    "use_enhanced_loss": true,
    "use_hierarchical_loss": true,
    "loss_weights": {
      "reconstruction": 1.0,
      "static_params_reconstruction": 1.0,
      "global_kl": 0.8,
      "local_kl": 1.2,
      "peak_loss": 1.0,
      "alignment_loss": 0.1,
      "static_regularization": 0.8,
      "hierarchical_infonce": 0.2
    },
    "loss_config": {
      "peak_loss_type": "huber",
      "huber_delta": 1.0,
      "alignment_loss_type": "warped_mse",
      "max_warp": 15,
      "temperature": 1.0,
      "use_hierarchical_static_loss": true,
      "use_hierarchical_infonce": true,
      "infonce_temperature": 0.07,
      "static_loss_weights": {
        "global": 0.4,
        "local": 0.4,
        "combined": 0.2
      },
      "infonce_weights": {
        "global": 0.6,
        "local": 0.4
      }
    }
  },
  "film_conditioning": {
    "use_film": true,
    "film_config": {
      "hidden_dim": 128,
      "num_layers": 4,
      "activation": "leaky_relu",
      "dropout": 0.1
    }
  },
  "hierarchical_model": {
    "use_hierarchical_model": true,
    "global_latent_dim": 64,
    "local_latent_dim": 64,
    "early_signal_ratio": 0.3,
    "hierarchical_loss_weights": {
      "global_kl": 0.8,
      "local_kl": 1.2,
      "static_global": 0.4,
      "static_local": 0.4,
      "static_combined": 0.2
    },
    "use_hierarchical_regularization": true,
    "hierarchical_regularization_weight": 0.2
  },
  "peak_prediction": {
    "predict_peaks": true,
    "num_peaks": 6,
    "peak_loss_weight": 1.0,
    "peak_loss_type": "huber",
    "use_peak_mask": true,
    "peak_presence_threshold": 0.5,
    "dynamic_peak_scheduling": true
  },
  "advanced_features": {
    "use_residual_connections": true,
    "use_batch_norm": true,
    "use_spectral_norm": false,
    "use_self_attention": false,
    "use_gradient_penalty": false,
    "kl_annealing_cycles": 3,
    "latent_interpolation_weight": 0.1,
    "diversity_loss_weight": 0.05
  },
  "inference": {
    "checkpoint_path": "checkpoints_ultimate_optimal_v3/best_model.pth",
    "output_dir": "outputs_ultimate_optimal_v3",
    "generation": {
      "num_samples": 150,
      "batch_size": 25,
      "save_signals": true,
      "save_peaks": true,
      "save_format": "both",
      "test_interpolation": true,
      "interpolation_steps": 20
    },
    "static_params": {
      "age_range": [18, 85],
      "intensity_range": [55, 95],
      "stimulus_rate_range": [11, 91],
      "fmp_range": [0.05, 2.5],
      "res_no_range": [5, 250],
      "hear_loss_categories": [1, 2, 3, 4, 5, 6]
    }
  },
  "evaluation": {
    "checkpoint_path": "checkpoints_ultimate_optimal_v3/best_model.pth",
    "metrics": {
      "reconstruction": {
        "mse": true,
        "mae": true,
        "rmse": true,
        "correlation": true,
        "r_squared": true,
        "ssim": true
      },
      "peaks": {
        "peak_mae": true,
        "peak_correlation": true,
        "peak_presence_accuracy": true,
        "per_peak_metrics": true,
        "peak_timing_accuracy": true
      },
      "latent_space": {
        "kl_divergence_analysis": true,
        "latent_utilization": true,
        "interpolation_quality": true,
        "hierarchical_disentanglement": true
      },
      "advanced": {
        "dtw_distance": true,
        "latent_space_quality": true,
        "generation_diversity": true,
        "interpolation_quality": true,
        "static_reconstruction_quality": true,
        "fid_score": true,
        "inception_score": false,
        "hierarchical_metrics": true
      }
    },
    "visualization": {
      "signal_reconstruction": {
        "enabled": true,
        "num_samples": 25,
        "save_individual": true,
        "save_grid": true,
        "show_peaks": true,
        "show_confidence": true,
        "show_hierarchical_contributions": true
      },
      "latent_space": {
        "enabled": true,
        "method": "both",
        "color_by": ["intensity", "age", "hear_loss", "fmp", "res_no"],
        "num_samples": 5000,
        "perplexity": 100,
        "random_state": 42,
        "separate_hierarchical_plots": true
      },
      "sample_generation": {
        "enabled": true,
        "num_parameter_sets": 25,
        "samples_per_set": 30,
        "show_variability": true,
        "interpolation_steps": 50,
        "hierarchical_interpolation": true
      },
      "loss_curves": {
        "enabled": true,
        "show_components": true,
        "show_validation": true,
        "smooth_factor": 0.9,
        "show_hierarchical_breakdown": true,
        "show_dynamic_weights": true
      }
    }
  },
  "checkpoints": {
    "save_dir": "checkpoints_ultimate_optimal_v3",
    "save_frequency": 15,
    "save_best_only": false,
    "monitor": "val_total_loss",
    "mode": "min",
    "filename_template": "epoch_{epoch:03d}_loss_{val_loss:.6f}.pth"
  },
  "outputs": {
    "base_dir": "outputs_ultimate_optimal_v3",
    "plots_dir": "outputs_ultimate_optimal_v3/plots",
    "results_dir": "outputs_ultimate_optimal_v3/results",
    "models_dir": "outputs_ultimate_optimal_v3/models",
    "logs_dir": "logs"
  },
  "monitoring": {
    "log_interval": 50,
    "save_frequency": 15,
    "plot_frequency": 10,
    "metric_frequency": 5,
    "track_kl_utilization": true,
    "track_hierarchical_metrics": true
  },
  "logging": {
    "log_level": "INFO",
    "log_file": "logs/training_ultimate_optimal_v3.log",
    "tensorboard_dir": "runs_ultimate_optimal_v3",
    "save_model_summary": true,
    "track_gradients": true,
    "track_weights": true,
    "track_latent_activations": true
  },
  "reproducibility": {
    "seed": 42,
    "deterministic": true,
    "benchmark": false
  },
  "device": {
    "use_cuda": true,
    "cuda_device": 0,
    "mixed_precision": false,
    "compile_model": false
  }
} 
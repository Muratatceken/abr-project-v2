{
  "project": {
    "name": "ABR_CVAE_Ultimate_Optimal_V2",
    "description": "Ultimate optimized CVAE configuration with all latest enhancements and advanced features",
    "version": "2.1.0"
  },
  "data": {
    "raw_data_path": "data/abr_dataset.xlsx",
    "processed_data_path": "data/processed/processed_data_categorical_200ts.pkl",
    "preprocessing": {
      "save_transformers": true,
      "scaler_path": "data/processed/scaler.pkl",
      "encoder_path": "data/processed/label_encoder.pkl",
      "verbose": true,
      "signal_length": 200
    },
    "dataloader": {
      "batch_size": 64,
      "val_split": 0.15,
      "test_split": 0.1,
      "num_workers": 8,
      "shuffle": true,
      "pin_memory": true,
      "drop_last": true,
      "normalize_signals": true,
      "normalize_static": true
    }
  },
  "model": {
    "architecture": {
      "signal_length": 200,
      "static_dim": 6,
      "latent_dim": 128,
      "predict_peaks": true,
      "num_peaks": 6,
      "joint_generation": false,
      "use_film": true,
      "model_type": "standard",
      "encoder": {
        "hidden_dims": [2048, 1024, 512, 256, 128],
        "dropout": 0.1,
        "activation": "leaky_relu",
        "batch_norm": true,
        "residual_connections": true
      },
      "decoder": {
        "hidden_dims": [128, 256, 512, 1024, 2048, 4096],
        "dropout": 0.1,
        "activation": "leaky_relu",
        "batch_norm": true,
        "residual_connections": true,
        "film_hidden_dim": 128
      }
    },
    "initialization": {
      "type": "xavier_uniform",
      "gain": 0.01
    }
  },
  "training": {
    "optimizer": {
      "type": "adamw",
      "learning_rate": 2e-4,
      "weight_decay": 1e-4,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "amsgrad": true
    },
    "scheduler": {
      "type": "cosine_annealing_warm_restarts",
      "T_0": 30,
      "T_mult": 2,
      "eta_min": 1e-7,
      "warmup_epochs": 20,
      "verbose": true
    },
    "beta_scheduler_type": "cyclical",
    "beta_scheduler_params": {
      "cycle_length": 25,
      "min_beta": 0.0,
      "max_beta": 1.0,
      "wave_type": "cosine"
    },
    "epochs": 200,
    "early_stopping": {
      "patience": 40,
      "min_delta": 1e-6,
      "restore_best_weights": true
    },
    "validation": {
      "frequency": 1,
      "compute_metrics": true
    },
    "gradient_clip": 0.5,
    "log_interval": 100,
    "save_interval": 10,
    "use_enhanced_loss": true,
    "loss_weights": {
      "reconstruction": 1.0,
      "kl_divergence": 1.0,
      "peak_loss": 1.5,
      "static_reconstruction": 1.0,
      "infonce_contrastive": 0.2,
      "alignment_loss": 0.1
    },
    "loss_config": {
      "peak_loss_type": "huber",
      "huber_delta": 1.0,
      "alignment_loss_type": "warped_mse",
      "max_warp": 15,
      "temperature": 1.0,
      "use_infonce": true,
      "infonce_temperature": 0.05,
      "use_alignment_loss": true
    },
    "hyperparameter_sweep": {
      "peak_loss_weight": {
        "enabled": true,
        "type": "linear",
        "start": 1.0,
        "end": 2.0
      },
      "infonce_weight": {
        "enabled": true,
        "type": "exponential",
        "start": 0.1,
        "end": 0.3
      }
    }
  },
  "static_regularization": {
    "use_static_regularization": true,
    "static_regularization_weight": 1.0,
    "use_infonce_loss": true,
    "infonce_weight": 0.2,
    "infonce_temperature": 0.05
  },
  "enhanced_loss": {
    "use_enhanced_loss": true,
    "loss_weights": {
      "reconstruction": 1.0,
      "kl_divergence": 1.0,
      "peak_loss": 1.5,
      "alignment_loss": 0.1,
      "static_reconstruction": 1.0,
      "infonce_contrastive": 0.2
    },
    "loss_config": {
      "peak_loss_type": "huber",
      "huber_delta": 1.0,
      "alignment_loss_type": "warped_mse",
      "max_warp": 15,
      "temperature": 1.0,
      "use_infonce": true,
      "infonce_temperature": 0.05,
      "use_alignment_loss": true
    }
  },
  "film_conditioning": {
    "use_film": true,
    "film_config": {
      "hidden_dim": 128,
      "num_layers": 4,
      "activation": "leaky_relu",
      "dropout": 0.1
    }
  },
  "hierarchical_model": {
    "use_hierarchical_model": false,
    "global_latent_dim": 64,
    "local_latent_dim": 64,
    "early_signal_ratio": 0.3,
    "hierarchical_loss_weights": {
      "global_kl": 0.5,
      "local_kl": 0.5,
      "static_global": 0.3,
      "static_local": 0.3,
      "static_combined": 0.4
    }
  },
  "peak_prediction": {
    "predict_peaks": true,
    "num_peaks": 6,
    "peak_loss_weight": 1.5,
    "peak_loss_type": "huber",
    "use_peak_mask": true,
    "peak_presence_threshold": 0.5
  },
  "advanced_features": {
    "use_residual_connections": true,
    "use_batch_norm": true,
    "use_spectral_norm": false,
    "use_self_attention": false,
    "use_gradient_penalty": false
  },
  "evaluation": {
    "checkpoint_path": "checkpoints_ultimate_optimal_v2/best_model.pth",
    "metrics": {
      "reconstruction": {
        "mse": true,
        "mae": true,
        "rmse": true,
        "correlation": true,
        "r_squared": true,
        "ssim": true
      },
      "peaks": {
        "peak_mae": true,
        "peak_correlation": true,
        "peak_presence_accuracy": true,
        "per_peak_metrics": true,
        "peak_timing_accuracy": true
      },
      "advanced": {
        "dtw_distance": true,
        "latent_space_quality": true,
        "generation_diversity": true,
        "interpolation_quality": true,
        "static_reconstruction_quality": true,
        "fid_score": true,
        "inception_score": false
      }
    },
    "visualization": {
      "signal_reconstruction": {
        "enabled": true,
        "num_samples": 20,
        "save_individual": true,
        "save_grid": true,
        "show_peaks": true,
        "show_confidence": true
      },
      "latent_space": {
        "enabled": true,
        "method": "both",
        "color_by": ["intensity", "age", "hear_loss", "fmp", "res_no"],
        "num_samples": 5000,
        "perplexity": 100,
        "random_state": 42
      },
      "sample_generation": {
        "enabled": true,
        "num_parameter_sets": 20,
        "samples_per_set": 25,
        "show_variability": true,
        "interpolation_steps": 50
      },
      "loss_curves": {
        "enabled": true,
        "show_components": true,
        "show_validation": true,
        "smooth_factor": 0.9
      }
    }
  },
  "logging": {
    "log_level": "INFO",
    "log_file": "logs/training_ultimate_optimal_v2.log",
    "tensorboard_dir": "runs_ultimate_optimal_v2",
    "save_model_summary": true,
    "track_gradients": true,
    "track_weights": true
  },
  "output": {
    "checkpoint_dir": "checkpoints_ultimate_optimal_v2",
    "output_dir": "outputs_ultimate_optimal_v2",
    "save_every_n_epochs": 10,
    "save_best_model": true,
    "save_final_model": true,
    "export_onnx": false
  },
  "reproducibility": {
    "seed": 42,
    "deterministic": true,
    "benchmark": false
  },
  "device": {
    "use_cuda": true,
    "cuda_device": 0,
    "mixed_precision": false,
    "compile_model": false
  }
} 